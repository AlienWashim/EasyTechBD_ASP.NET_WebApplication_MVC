@model DynamicProductUpdate.Category

@{
    ViewBag.Title = "Delete";
}

<h3 class="card card-body shadow-sm">Are you sure you want to delete this category?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Category
        </dt>

        <dd>
            @Html.DisplayFor(model => model.categoryName)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger m-2" /> |
            @Html.ActionLink("Back to List", "Index",null, new {@class = "btn btn-secondary m-2"})
        </div>
    }
</div>
