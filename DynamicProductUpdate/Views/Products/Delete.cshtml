@model DynamicProductUpdate.Product

@{
    ViewBag.Title = "Delete";
}

<h3 class="card card-body shadow-sm">Are you sure you want to delete this?</h3>
<div class="row shadow-sm border p-2 m-1 w-100">
    <!-- Left Column: Product Info -->
    <div class="col-md-6">
        <dl class="dl-horizontal">
            <dt>
                Product Name
            </dt>
            <dd>
                @Html.DisplayFor(model => model.productName)
            </dd>

            <dt>
                Category
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Category.categoryName)
            </dd>

            <dt>
                Price (BDT)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.productPrice)
            </dd>

            <dt>
                Description
            </dt>
            <dd>
                @Html.Raw(Model.productDescription.Replace(Environment.NewLine, "<br />"))
            </dd>
        </dl>
    </div>

    <!-- Right Column: Product Image -->
    <div class="col-md-6 card">
        <dt>
            Image
        </dt>
        <dd class="text-center">
            @if (!string.IsNullOrEmpty(Model.productImage))
            {
                <img src="@Url.Content(Model.productImage)" alt="Product Image" style="max-width: 300px; height: auto;" />
            }
            else
            {
                <span>No Image Available</span>
            }
        </dd>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
        </div>
    }
</div>

    

